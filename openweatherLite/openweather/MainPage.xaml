<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="openweather.MainPage">

    <ScrollView
        x:Name="scrollBack"
        BackgroundColor="#48afff">
        <VerticalStackLayout
            
            Margin="0,50,0,0">

            <Image x:Name="weatherIcon"
                   WidthRequest="100"/>

            <Label x:Name="tempLabel" 
                   HorizontalOptions="Center"   
                   Text="Tempurature"
                   TextColor="White"
                   Opacity=".6"
                   FontSize="20"
                   FontAttributes="Bold"/>
            
            <Label x:Name="tempText"
                   HorizontalOptions="Center"
                   Opacity=".8"
                   FontSize="50"
                   FontAttributes="Bold"/>
            
            <Label x:Name="weatherLabel"
                   HorizontalOptions="Center"
                   Text="Weather"
                   TextColor="White"
                   Opacity=".6"
                   FontSize="20"
                   FontAttributes="Bold"/>
            
            <Label x:Name="weatherText"
                   HorizontalOptions="Center"
                   Opacity=".8"
                   FontSize="50"
                   FontAttributes="Bold"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
