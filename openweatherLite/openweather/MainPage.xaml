<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="openweather.MainPage">

    <ScrollView>
        <VerticalStackLayout
            BackgroundColor="#48afff">
            <Label x:Name="tempLabel" 
                   Text="Tempurature:"
                   TextColor="White"
                   FontSize="30"
                   FontAttributes="Bold"/>
            <Label x:Name="tempText"/>
            
            <Label x:Name="weatherLabel"
                   Text="Weather:"
                   TextColor="White"
                   FontSize="30"
                   FontAttributes="Bold"/>
            <Label x:Name="weatherText"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
